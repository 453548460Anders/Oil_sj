<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8" >

    <LinearLayout
        android:gravity="center"
        android:id="@+id/loading_layout_versionLinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:layout_below="@+id/loading_layout_barLinear"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_marginTop="5dp"
            android:background="@drawable/idcard_front"
            android:layout_width="245dp"
            android:layout_height="140dp" />
        <ImageView
            android:layout_marginTop="5dp"
            android:background="@drawable/idcard_back"
            android:layout_width="245dp"
            android:layout_height="140dp" />
    </LinearLayout>


    <RelativeLayout
        android:background="@color/themecolor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/loading_layout_isVerticalBtn"
            android:layout_width="85dip"
            android:layout_height="30dip"
            android:layout_margin="10dip"
            android:background="@drawable/btn_backselect"
            android:text="horizontal"
            android:textColor="#ffffffff"
            android:textSize="18sp"
            android:visibility="invisible" />

        <TextView
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:text="@string/idcard_title"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/idcard_jump"
            android:layout_width="85dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_margin="10dip"
            android:background="@drawable/btn_backselect"
            android:text="@string/jump"
            android:textColor="#ffffffff"
            android:textSize="18sp"
            android:visibility="visible" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/loading_layout_barLinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ProgressBar
            android:id="@+id/loading_layout_WarrantyBar"
            android:layout_width="30dip"
            android:layout_height="30dip" />

        <TextView
            android:id="@+id/loading_layout_WarrantyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dip"
            android:layout_marginTop="10dip"
            android:text="正在联网授权中..."
            android:textColor="#4FA1B7"
            android:textSize="18sp" />
    </LinearLayout>

    <Button
        android:id="@+id/loading_layout_againWarrantyBtn"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_below="@+id/loading_layout_barLinear"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="45dip"
        android:layout_marginRight="45dip"
        android:layout_marginTop="120dip"
        android:background="@drawable/btn_backselect"
        android:text="重新联网授权"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_below="@+id/loading_layout_versionLinear"
        android:id="@+id/loading_layout_contentRel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">


        <LinearLayout
            android:id="@+id/loading_layout_btnLinear"
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:visibility="visible" >

            <Button
                android:id="@+id/loading_front"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@drawable/btn_backselect"
                android:text="正面"
                android:textColor="#ffffffff"
                android:textSize="22sp" />

            <Button
                android:id="@+id/loading_back"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginTop="25dip"
                android:background="@drawable/btn_backselect"
                android:text="反面"
                android:textColor="#ffffffff"
                android:textSize="22sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>